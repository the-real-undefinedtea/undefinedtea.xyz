---
import Default from '../layouts/default.astro'
import Container from '../components/container.svelte'
import Section from '../components/section.svelte'

import CardComponent from '../components/cardComponent.svelte'
import * as Card from '../components/card'

import Self from '../asset/image/self.png?url'

const data = [
  { uuid: 'UNDEFINEDTEA.XYZ', to: { uuid: 'git.undefinedtea.xyz', path: '//git.undefinedtea.xyz/undefinedtea/undefinedtea.xyz' }, description: 'Personal page to serve mostly as an outlet for thoughts. So meta to include this page, I know.', svg: Self },
  { uuid: 'ELROND', to: { uuid: 'git.undefinedtea.xyz', path: '//git.undefinedtea.xyz/undefinedtea/elrond' }, description: 'A self hosted environment.', svg: Self },
  { uuid: 'DOTFILE REPOSITORY', to: { uuid: 'git.undefinedtea.xyz', path: '//git.undefinedtea.xyz/undefinedtea/dot' }, description: 'This is a development environment just the way I like it w/o having to remember too much.', svg: Self }
]
---

<Default>
  <Container>
    <Section topic="Things I am making trying to put a dent in the universe." description="Over the years I have worked on many things, but here are the ones that I am most proud of. I am a firm believer in open source, so please feel free to contribute.">
      <ul class="grid grid-cols-1 md:grid-cols-3 gap-x-12 gap-y-16">
        { data.map((item) => (
          <CardComponent as="li">
            <section class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full shadow-md shadow-zinc-700/5 ring-1 dark:ring-0 ring-zinc-900/5 dark:border dark:border-zinc-700/50 bg-white dark:bg-zinc-900">
              <img src={ item.svg } alt="" class="h-8 w-8" />
            </section>
            <h2 class="mt-6 text-base font-medium text-zinc-900 dark:text-zinc-100">
              <Card.To to={ item.to.path }>{ item.uuid }</Card.To>
            </h2>
            <Card.Description>
              { item.description }
            </Card.Description>
            <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-500 dark:text-zinc-300 transition group-hover:text-teal-500">
              <svg class="h-6 w-6 flex-none" xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" aria-hidden="true">
                <path fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.712 11.823a.75.75 0 1 0 1.06 1.06l-1.06-1.06Zm-4.95 1.768a.75.75 0 0 0 1.06-1.06l-1.06 1.06Zm-2.475-1.414a.75.75 0 1 0-1.06-1.06l1.06 1.06Zm4.95-1.768a.75.75 0 1 0-1.06 1.06l1.06-1.06Zm3.359.53-.884.884 1.06 1.06.885-.883-1.061-1.06Zm-4.95-2.12 1.414-1.415L12 6.344l-1.415 1.413 1.061 1.061Zm0 3.535a2.5 2.5 0 0 1 0-3.536l-1.06-1.06a4 4 0 0 0 0 5.656l1.06-1.06Zm4.95-4.95a2.5 2.5 0 0 1 0 3.535L17.656 12a4 4 0 0 0 0-5.657l-1.06 1.06Zm1.06-1.06a4 4 0 0 0-5.656 0l1.06 1.06a2.5 2.5 0 0 1 3.536 0l1.06-1.06Zm-7.07 7.07.176.177 1.06-1.06-.176-.177-1.06 1.06Zm-3.183-.353.884-.884-1.06-1.06-.884.883 1.06 1.06Zm4.95 2.121-1.414 1.414 1.06 1.06 1.415-1.413-1.06-1.061Zm0-3.536a2.5 2.5 0 0 1 0 3.536l1.06 1.06a4 4 0 0 0 0-5.656l-1.06 1.06Zm-4.95 4.95a2.5 2.5 0 0 1 0-3.535L6.344 12a4 4 0 0 0 0 5.656l1.06-1.06Zm-1.06 1.06a4 4 0 0 0 5.657 0l-1.061-1.06a2.5 2.5 0 0 1-3.535 0l-1.061 1.06Zm7.07-7.07-.176-.177-1.06 1.06.176.178 1.06-1.061Z" />
              </svg>
              <span class="ml-2">{ item.to.uuid }</span>
            </p>
          </CardComponent>
        )) }
      </ul>
    </Section>
  </Container>
</Default>
